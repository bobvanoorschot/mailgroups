<main>
  <div class="relative flex">
    <!-- Messages sidebar -->
    <div id="messages-sidebar">
      <%= render 'list_lists' %>
    </div>
    <!-- Messages body -->
    <div class="grow flex flex-col">
      <!-- Header -->
      <div class="sticky">
        <div class="flex items-center justify-between bg-white border-b border-slate-200 px-4 sm:px-6 md:px-5 h-16">
          <!-- People -->
          <div class="flex items-center"></div>
          <!-- Buttons on the right side -->
          <div class="flex"></div>
        </div>
      </div>
      <!-- Body -->
      <div class="grow px-4 sm:px-6 md:px-5 py-6">
        <div id="lists" class="mb-4 last:mb-0">
          <%= render @list %>
        </div>
      </div>
    </div>
  </div>
</main>